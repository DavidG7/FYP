<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_chart_ticker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight ="0.10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="match_parent"

            android:gravity="center|right"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="@color/list_divider_pressed"
            android:text="BIR.IR"
            />

        <ImageView

        android:layout_width="0dp"
        android:layout_weight="0.10"
        android:layout_height="match_parent"
        android:layout_marginRight= "15dp"
        android:src= "@drawable/ic_menu_more"
        android:gravity="center|right"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/list_divider_pressed"
        android:text="BIR.IR"
        />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65">

    <FrameLayout
        android:id="@+id/graph_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"/>
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="30dp"
        android:layout_weight ="0.25"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/iv_bar_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333"
            android:src="@drawable/bar_chart_selected"
           />

        <ImageView
            android:id="@+id/iv_line_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333"
            android:src="@drawable/line_chart"
            />

        <ImageView
            android:id="@+id/iv_pie_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333"
            android:src="@drawable/pie_chart"
            />

        </LinearLayout>



</LinearLayout>